<UserControl x:Class="GridDotNetBugs.GridsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GridDotNetBugs"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Border Margin="2" BorderThickness="1" BorderBrush="Red">
        
        <Grid Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBox Text="0" Grid.Row="0" />
            <TextBox Text="1" Grid.Row="1" Visibility="Collapsed" />
            <TextBox Text="2" Grid.Row="2"/>
            <TextBox Text="3" Grid.Row="3" Visibility="Collapsed" />
            <TextBox Text="4" Grid.Row="4" />

        </Grid>
    </Border>
</UserControl>
